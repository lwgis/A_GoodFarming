<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/selector_edittext_bg</item>
    </style>
    <style name="Widget" parent="@android:style/Widget"/>
	<!-- Layout样式 -->
	<style name="Widget.Layout" parent="@style/Widget"/>
	<style name="Widget.VLayout" parent="@style/Widget.Layout">
	    <item name="android:orientation">vertical</item>
	</style>
	<style name="Widget.HLayout" parent="@style/Widget.Layout">
	    <item name="android:orientation">horizontal</item>
	</style>
    <style name="Widget.Layout.Dialog" parent="@style/Widget.VLayout">
	    <item name="android:padding">5dip</item>
	    <item name="android:background">@drawable/alert_back</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
    
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/transparentitem</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>