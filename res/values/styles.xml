<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT dipecific to a particular API-level can go here. -->
    </style>

    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/selector_edittext_bg</item>
    </style>
    <style name="Widget" parent="@android:style/Widget"/>
	<!-- Layout样式 -->
	<style name="Widget.Layout" parent="@style/Widget"/>
	<style name="Widget.VLayout" parent="@style/Widget.Layout">
	    <item name="android:orientation">vertical</item>
	</style>
	<style name="Widget.HLayout" parent="@style/Widget.Layout">
	    <item name="android:orientation">horizontal</item>
	</style>
    <style name="Widget.Layout.Dialog" parent="@style/Widget.VLayout">
	    <item name="android:padding">5dip</item>
	    <item name="android:background">@drawable/alert_back</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
    
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/transparentitem</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Widget.LinearLayout.SearchBackLayout" parent="@style/Widget.HLayout">
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">2dip</item>
	    <item name="android:paddingTop">0dip</item>
	    <item name="android:paddingRight">2dip</item>
	    <item name="android:paddingBottom">0dip</item>
	    <item name="android:background">@drawable/searchlayoutborder</item>
	</style>
	<style name="Widget.LinearLayout.SearchLayout" parent="@style/Widget.HLayout">
	    <item name="android:background">@drawable/cornerlayout</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">8dip</item>
	    <item name="android:paddingTop">2dip</item>
	    <item name="android:paddingRight">8dip</item>
	    <item name="android:paddingBottom">2dip</item>
	</style>
	<style name="Widget.Image" parent="@style/Widget">
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription"> </item>
    </style>
	<style name="Widget.Image.SearchClear" parent="@style/Widget.Image">
        <item name="android:src">@drawable/cleanbtn</item>
    </style>
    <style name="Widget.Image.SearchIcon" parent="@style/Widget.Image">
        <item name="android:src">@drawable/search</item>
    </style>
    <style name="SearchEdit">
	    <item name="android:background">#00000000</item>
	    <item name="android:imeOptions">actionDone</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:paddingLeft">3dip</item>
	    <item name="android:textSize">15dip</item>
	    <item name="android:hint">输入手机号码</item>
	    <item name="android:textColorHint">#FFbdbdbd</item>
	</style>
	
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/progress_back</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AnimBottom" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
	</style>
    <style name="AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_out</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_in</item>
 	</style>
 	
    <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>
 	
</resources>