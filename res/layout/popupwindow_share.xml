<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dddddd"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/toptextview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dip"
	    android:text="分享到"
	    android:textColor="#444444"
	    android:textSize="15dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center_horizontal"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
	            android:id="@+id/img_share_weixin"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/share_weixin"
	            android:background="#00000000"
	        /> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="微信好友"
                android:textColor="#808080"
                android:textSize="12dip" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
	            android:id="@+id/img_share_circlefriends"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/share_circlefriends"
	            android:background="#00000000"
	        /> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="微信朋友圈"
                android:textColor="#808080"
                android:textSize="12dip" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
	            android:id="@+id/img_share_qq"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/share_qq"
	            android:background="#00000000"
	        /> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="QQ好友"
                android:textColor="#808080"
                android:textSize="12dip" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
	            android:id="@+id/img_share_qzone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/share_qzone"
	            android:background="#00000000"
	        /> 
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="QQ空间"
                android:textColor="#808080"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>
	<com.zhonghaodi.customui.MyTextButton
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_shape"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="18dip" />
</LinearLayout>
