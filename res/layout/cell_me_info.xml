<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/item_background_default" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.makeramen.RoundedImageView
                android:id="@+id/head_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
		        android:src="@drawable/user_head"
		        app:border_color="#FFFFFF"
		        app:border_width="1dip"
		        app:corner_radius="10dp"
		        app:mutate_background="true"
		        app:oval="false"
    			/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dip"
                android:orientation="vertical" >
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
	                     android:id="@+id/title_text"
	                     android:layout_width="0dip"
	                     android:layout_height="wrap_content"
	                     android:layout_weight="1"
	                     android:singleLine="true"
	                     android:text="用户昵称"
	                     android:textColor="#444444"
	                     android:textSize="18dip" />
                    <ImageView
			             android:id="@+id/qrcode_img"
			             android:layout_width="30dp"
			             android:layout_height="30dp"
			             android:layout_gravity="center"
			             android:layout_marginTop="2dip"
			             android:layout_marginRight="10dip"
			             android:src="@drawable/qrcode"
			             />
                </LinearLayout>
				<LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
	                <LinearLayout
	                    android:layout_width="0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_marginBottom="0dp"
	                    android:orientation="horizontal" >
	
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:gravity="right"
	                        android:singleLine="true"
	                        android:text="优惠币:"
	                        android:textColor="#808080"
	                        android:textSize="15dip" />
	
	                    <TextView
	                        android:id="@+id/youhuibi_text"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:singleLine="true"
	                        android:text="0"
	                        android:textColor="#444444"
	                        android:textSize="15dip" />
	                </LinearLayout>
	                <LinearLayout
	                    android:layout_width="0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_marginBottom="0dp"
	                    android:orientation="horizontal" >
	
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:gravity="right"
	                        android:singleLine="true"
	                        android:text="贡献值:"
	                        android:textColor="#808080"
	                        android:textSize="15dip" />
	
	                    <TextView
	                        android:id="@+id/tjcoin_text"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:singleLine="true"
	                        android:text="0"
	                        android:textColor="#444444"
	                        android:textSize="15dip" />
	                </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
	                <LinearLayout
	                    android:layout_width="0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_marginBottom="0dp"
	                    android:orientation="horizontal" >
	
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:gravity="right"
	                        android:singleLine="true"
	                        android:text="推荐码:"
	                        android:textColor="#808080"
	                        android:textSize="15dip" />
	
	                    <TextView
	                        android:id="@+id/tjcode_text"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:singleLine="true"
	                        android:text="0"
	                        android:textColor="#444444"
	                        android:textSize="15dip" />
	                </LinearLayout>
	                <LinearLayout
	                    android:layout_width="0dip"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:layout_marginBottom="0dp"
	                    android:orientation="horizontal" >
	
	                    <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:gravity="right"
	                        android:singleLine="true"
	                        android:text="推荐人数:"
	                        android:textColor="#808080"
	                        android:textSize="15dip" />
	
	                    <TextView
	                        android:id="@+id/reccount_text"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginTop="3dp"
	                        android:singleLine="true"
	                        android:text="0"
	                        android:textColor="#444444"
	                        android:textSize="15dip" />
	                </LinearLayout>
	            </LinearLayout>
				
            </LinearLayout>
            
        </LinearLayout>

        <View  
		   android:layout_width="match_parent"  
		   android:layout_height="0.2px" 
		   android:layout_margin="6dip"
		   android:background="#cccccc"  
		/> 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/guanzhu_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/guanzhu_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="#444444"
                    android:textSize="15dip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="关注"
                    android:textColor="#808080"
                    android:textSize="15dip" />
            </LinearLayout>
			<View  
			   android:layout_width="0.2px"  
			   android:layout_height="match_parent" 
			   android:layout_marginLeft="6dip"
			   android:layout_marginTop="0dip"
			   android:layout_marginBottom="4dip"
			   android:layout_marginRight="6dip"
			   android:background="#cccccc"  
			/>
            <LinearLayout
                android:id="@+id/fensi_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fensi_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#444444"
                    android:textSize="15dip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="#808080"
                    android:textSize="15dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>