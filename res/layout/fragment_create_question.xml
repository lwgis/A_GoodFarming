<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="尽量按农作物近照,远照,局部,整体,正面,反面来上传图片"
            android:textColor="#808080"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/jinzhao_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/jubu_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/zhengmian_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/yuanzhao_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/zhengti_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <com.zhonghaodi.customui.GFImageButton
                        android:id="@+id/fanmian_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>

                <com.zhonghaodi.customui.MyEditText
                    android:id="@+id/content_edit"
                    style="@style/my_edittext_style"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:gravity="top"
                    android:hint="病虫害的详细描述..."
                    android:padding="1dp"
                    android:maxLength="200"
                    android:textColor="#333333" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:text="为了更好的确诊请尽量完成下面的选项"
            android:textColor="#808080"
            android:textSize="17sp" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="30dip"
            android:orientation="vertical"
            >
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:gravity="center"
	            android:layout_marginLeft="6dip"
	            android:text="1、病害分布规律"
	            android:textColor="#808080"
	            android:textSize="17sp" />
	        <RadioGroup android:id="@+id/radioFenbu"  
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    android:orientation="horizontal"
			    android:gravity="left"
			    >
				<RadioButton 
				    android:id="@+id/rd_guilv"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="规律性"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_feiguilv"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="非规律性"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_fbbqc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="不清楚"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    android:checked="true"
				    />
			</RadioGroup>
			<TextView
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:gravity="center"
	            android:layout_marginLeft="6dip"
	            android:text="2、病害发生情况"
	            android:textColor="#808080"
	            android:textSize="17sp" />
	        <RadioGroup android:id="@+id/radioBhfb"  
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    android:orientation="horizontal"
			    android:gravity="left"
			    >
				<RadioButton 
				    android:id="@+id/rd_lxsl"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="零星少量"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_dmj"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="大面积"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_bhfbbqc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="不清楚"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    android:checked="true"
				    />
			</RadioGroup>
			<TextView
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:gravity="center"
	            android:layout_marginLeft="6dip"
	            android:text="3、病害发展速度"
	            android:textColor="#808080"
	            android:textSize="17sp" />
	        <RadioGroup android:id="@+id/radioFzsd"  
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    android:orientation="horizontal"
			    android:gravity="left"
			    >
				<RadioButton 
				    android:id="@+id/rd_xs"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="1dip"
				    android:button="@drawable/radiobg"
				    android:text="迅速"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_hm"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="1dip"
				    android:button="@drawable/radiobg"
				    android:text="缓慢"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_ggfs"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="1dip"
				    android:button="@drawable/radiobg"
				    android:text="刚发生"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_fzsdbqc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="1dip"
				    android:button="@drawable/radiobg"
				    android:text="不清楚"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    android:checked="true"
				    />
			</RadioGroup>
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:gravity="center"
	            android:layout_marginLeft="6dip"
	            android:text="4、植株根系情况"
	            android:textColor="#808080"
	            android:textSize="17sp" />
	        <RadioGroup android:id="@+id/radioGenxi"  
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    android:orientation="horizontal"
			    android:gravity="left"
			    >
				<RadioButton 
				    android:id="@+id/rd_lianghao"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="2dip"
				    android:button="@drawable/radiobg"
				    android:text="根系良好"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_yousun"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="2dip"
				    android:button="@drawable/radiobg"
				    android:text="根系有损"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_gxbqc"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="2dip"
				    android:button="@drawable/radiobg"
				    android:text="不清楚"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    android:checked="true"
				    />
			</RadioGroup>
			
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:gravity="center"
	            android:layout_marginLeft="6dip"
	            android:text="5、农事操作情况"
	            android:textColor="#808080"
	            android:textSize="17sp" />
	        <RadioGroup android:id="@+id/radioNongshi"  
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:layout_margin="10dip"
			    android:orientation="horizontal"
			    android:gravity="left"
			    >
				<RadioButton 
				    android:id="@+id/rd_jiaoshui"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="浇水"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_dayao"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="打药"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    />
				<RadioButton 
				    android:id="@+id/rd_qtcz"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:layout_marginRight="5dip"
				    android:button="@drawable/radiobg"
				    android:text="其他操作"
				    android:textSize="17sp"
				    android:textColor="#808080"
				    android:checked="true"
				    />
			</RadioGroup>
        </LinearLayout>
    </LinearLayout>

</ScrollView>