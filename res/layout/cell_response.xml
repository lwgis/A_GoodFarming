<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:focusable="false"
	    >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/background_with_shadow"
	        android:orientation="vertical" 
	        android:focusable="false"
	        >
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	
	            <com.makeramen.RoundedImageView
	                android:id="@+id/head_image"
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:layout_marginLeft="5dp"
	                android:layout_marginTop="5dp"
	                android:scaleType="centerCrop"
	                android:src="@drawable/placeholder" 
	                android:focusable="false"
	                app:border_color="#FFFFFF"
		        	app:border_width="1dip"
		        	app:corner_radius="100dp"
		        	app:mutate_background="true"
		        	app:oval="false"
	                />
	
	            <LinearLayout
	                android:layout_width="wrap_content"
                	android:layout_height="match_parent"
                	android:layout_marginLeft="38dip"
                	android:layout_marginTop="5dip"
                	android:orientation="vertical" 
	                >
	
	                <TextView
	                    android:id="@+id/name_text"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="2dp"
	                    android:layout_marginLeft="5dip"
	                    android:text="用户名"
	                    android:textColor="#444444"
	                    android:textSize="13dip" 
	                    />
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal" 
	                    >
	                    <TextView
		                    android:id="@+id/level_text"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginRight="3dip"
		                    android:paddingLeft="2dip"
		                    android:paddingRight="2dip"
		                    android:gravity="center"
		                    android:text="农友"
		                    android:textColor="#ffffff"
		                    android:textSize="11dip"
		                    android:background="@drawable/button_shape"
		                     />
	                    <TextView
		                    android:id="@+id/time_text"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="21:37:20"
		                    android:textColor="#808080"
		                    android:textSize="12dip"
		                     />                
	                </LinearLayout>
	            </LinearLayout>	
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:padding="10dip"
	                android:orientation="vertical"
	                android:gravity="center_vertical"
	                >
	                
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/more_image"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_alignParentRight="true"
	                android:orientation="vertical"
	                android:gravity="center"
	                >
	                <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:layout_marginLeft="5dip"
		                android:layout_marginRight="5dip"
		                android:layout_marginTop="11dip"
		                android:layout_marginBottom="5dip"
		                android:scaleType="centerCrop"
		                android:src="@drawable/more1" 
		                android:focusable="false"
		                />
	            </LinearLayout>			
	      </RelativeLayout>
	
	      <View  
			   android:layout_width="match_parent"  
			   android:layout_height="0.2px" 
			   android:layout_margin="6dip"
			   android:background="#cccccc"  
			   android:focusable="false"
			/> 
			
	      <RelativeLayout
	            android:id="@+id/img_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	             >
	
	            <LinearLayout
	                android:layout_width="320dp"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true" >
	
	                <com.zhonghaodi.customui.GFImageView
	                    android:id="@+id/image1"
	                    android:layout_width="100dp"
	                    android:layout_height="100dp"
	                    android:scaleType="centerCrop"
	                    android:src="@drawable/placeholder" />
	
	                <com.zhonghaodi.customui.GFImageView
	                    android:id="@+id/image2"
	                    android:layout_width="100dp"
	                    android:layout_height="100dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginRight="10dp"
	                    android:scaleType="centerCrop"
	                    android:src="@drawable/placeholder" />
	
	                <com.zhonghaodi.customui.GFImageView
	                    android:id="@+id/image3"
	                    android:layout_width="100dp"
	                    android:layout_height="100dp"
	                    android:scaleType="centerCrop"
	                    android:src="@drawable/placeholder" />
	            </LinearLayout>
	        </RelativeLayout>
	
	        <com.zhonghaodi.customui.UrlTextView
	            android:id="@+id/content_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginBottom="8dip"
	            android:layout_marginTop="5dip"
	            android:text="内容"
	            android:textColor="#333333"
	            android:textSize="16dip" 
	            />
	        
	        <View  
	            android:id="@+id/bottomLine"
			   android:layout_width="match_parent"  
			   android:layout_height="0.2px" 
			   android:layout_marginLeft="6dp"
	           android:layout_marginRight="6dp"
	           android:layout_marginBottom="0dip"
	           android:layout_marginTop="6dip"
			   android:background="#cccccc"  
			   android:focusable="false"
			/> 
	        <LinearLayout 
	            android:id="@+id/bottomLayout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_margin="5dip"
	            android:focusable="false"
	            >
	            <LinearLayout 
	                android:id="@+id/count_layout"
	                android:layout_width="0dip"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
	                >
	                <ImageView
		                android:layout_width="20dp"
		                android:layout_height="20dp"
		                android:layout_margin="5dip"
		                android:padding="2dip"
		                android:scaleType="centerCrop"
		                android:src="@drawable/comment" 
		                android:focusable="false"
		                />
	                <TextView
	                    android:id="@+id/count_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dip"
	                    android:gravity="center_vertical"
	                    android:layout_marginTop="5dip"
	                    android:text="10"
	                    android:textColor="#808080"
	                    android:textSize="14dip" 
	                    android:focusable="false"
	                    />
	            </LinearLayout>
                <View  
				   android:layout_width="0.2px"  
				   android:layout_height="match_parent" 
				   android:layout_marginLeft="6dip"
				   android:layout_marginTop="0dip"
				   android:layout_marginBottom="0dip"
				   android:layout_marginRight="6dip"
				   android:background="#cccccc"  
				/> 
				<LinearLayout 
                    android:id="@+id/zan_layout"
                    android:layout_width="0dip"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
	                    android:id="@+id/zanIv"
		                android:layout_width="20dp"
		                android:layout_height="20dp"
		                android:layout_marginTop="3dip"
		                android:layout_marginBottom="7dip"
		                android:layout_marginLeft="5dip"
		                android:layout_marginRight="5dip"
		                android:padding="2dip"
		                android:scaleType="centerCrop"
		                android:src="@drawable/zan_img" 
		                android:focusable="false"
		                />
	                <TextView
	                    android:id="@+id/zancount_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="20dip"
	                    android:gravity="center_vertical"
	                    android:layout_marginTop="5dip"
	                    android:text="10"
	                    android:textColor="#808080"
	                    android:textSize="14dip" 
	                    android:focusable="false"
	                    />
                </LinearLayout>
	           
	        </LinearLayout>
	    </LinearLayout>	
	</LinearLayout>
	<RelativeLayout 
	    android:id="@+id/cainalayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:focusable="false"
	    >
	     <ImageView
              android:id="@+id/caina_image"
              android:layout_width="45dp"
              android:layout_height="59dp"
              android:layout_marginRight="50dp"
              android:layout_marginTop="5dp"
              android:layout_alignParentRight="true"
              android:padding="2dip"
              android:scaleType="centerCrop"
              android:src="@drawable/caina" 
              android:focusable="false"
              />
	</RelativeLayout>
</FrameLayout>
