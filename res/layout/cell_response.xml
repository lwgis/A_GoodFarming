<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/background_with_shadow"
	        android:orientation="vertical" 
	        >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            >
	
	            <ImageView
	                android:id="@+id/head_image"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginLeft="5dp"
	                android:layout_marginTop="5dp"
	                android:padding="2dip"
	                android:scaleType="centerCrop"
	                android:src="@drawable/placeholder" 
	                android:background="@drawable/head_img_back"
	                android:focusable="false"
	                />
	
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:layout_marginLeft="5dip"
	                android:orientation="vertical" 
	                >
	
	                <TextView
	                    android:id="@+id/name_text"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="2dp"
	                    android:text="用户名"
	                    android:textColor="#444444"
	                    android:textSize="13sp" 
	                    android:focusable="false"
	                    />
	
	                <TextView
	                    android:id="@+id/time_text"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="21:37:20"
	                    android:textColor="#808080"
	                    android:textSize="12sp" 
	                    android:focusable="false"
	                    />
	            </LinearLayout>
	            <LinearLayout 
	                android:id="@+id/count_layout"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <ImageView
		                android:layout_width="20dp"
		                android:layout_height="20dp"
		                android:layout_margin="5dip"
		                android:padding="2dip"
		                android:scaleType="centerCrop"
		                android:src="@drawable/comment" 
		                android:focusable="false"
		                />
	                <TextView
	                    android:id="@+id/count_tv"
	                    android:layout_width="30dip"
	                    android:layout_height="20dip"
	                    android:gravity="center_vertical"
	                    android:layout_marginTop="5dip"
	                    android:text="10"
	                    android:textColor="#808080"
	                    android:textSize="14sp" 
	                    android:focusable="false"
	                    />
	            </LinearLayout>
				
	        </LinearLayout>
	
	      <View  
			   android:layout_width="match_parent"  
			   android:layout_height="0.2px" 
			   android:layout_margin="6dip"
			   android:background="#cccccc"  
			/> 
	
	        <com.zhonghaodi.customui.UrlTextView
	            android:id="@+id/content_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginBottom="8dip"
	            android:layout_marginTop="5dip"
	            android:text="内容"
	            android:textColor="#333333"
	            android:textSize="14sp" 
	            android:focusable="false"
	            android:clickable="false"
	            />
	        
	        <View  
			   android:layout_width="match_parent"  
			   android:layout_height="0.2px" 
			   android:layout_margin="6dip"
			   android:background="#cccccc"  
			/> 
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_margin="5dip"
	            >
	            <com.zhonghaodi.customui.MyTextButton
			        android:id="@+id/agree_button"
			        android:layout_width="0dip"
			        android:layout_height="30dp"
			        android:layout_weight="1"
			        android:layout_margin="2dip"
			        android:background="@drawable/button_agreebtn"
			        android:text="赞同"
			        android:textColor="@drawable/color_agreebtn"
			        android:textSize="16sp" 
			        android:focusable="false"/>
	            <com.zhonghaodi.customui.MyTextButton
			        android:id="@+id/disagree_button"
			        android:layout_width="0dip"
			        android:layout_height="30dp"
			        android:layout_weight="1"
			        android:layout_margin="2dip"
			        android:background="@drawable/button_agreebtn"
			        android:text="反对"
			        android:textColor="@drawable/color_agreebtn"
			        android:textSize="16sp"
			        android:focusable="false" />
	        </LinearLayout>
	    </LinearLayout>	
	</LinearLayout>
	<RelativeLayout 
	    android:id="@+id/cainalayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:focusable="false"
	    >
	     <ImageView
              android:id="@+id/caina_image"
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_marginRight="5dp"
              android:layout_marginTop="5dp"
              android:layout_alignParentRight="true"
              android:padding="2dip"
              android:scaleType="centerCrop"
              android:src="@drawable/cai_na" 
              android:focusable="false"
              />
	</RelativeLayout>
</FrameLayout>
