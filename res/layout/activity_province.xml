<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#38be99" >

        <com.zhonghaodi.customui.MyTextButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:text="&lt;返回"
            android:textColor="#ffffff"
            android:textSize="20dip" 
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择区域"
            android:textColor="#FFFFFF"
            android:textSize="18dip" />
    </RelativeLayout>
    
    <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1" 
           >
           <com.zhonghaodi.view.PinnedHeaderListView  
	        android:id="@+id/provincelist"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:cacheColorHint="@android:color/transparent" 
	        android:divider="@android:color/transparent"
	        android:dividerHeight="0dp" 
	        android:footerDividersEnabled="false"  
	        android:headerDividersEnabled="false" 
	        android:smoothScrollbar="true"
       		/>
           <LinearLayout 
               android:layout_width="30dp"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:background="#00000000"
               android:gravity="center"
               android:layout_alignParentRight="true"
               >
               <ListView 
                android:id="@+id/letterlist"
                android:layout_width="30dp"
                android:layout_height="wrap_content"	
                android:listSelector="#00000000"
                android:cacheColorHint="@android:color/transparent" 
		        android:divider="@android:color/transparent"
		        android:dividerHeight="0dp" 
		        android:footerDividersEnabled="false"  
		        android:headerDividersEnabled="false" 
		        android:smoothScrollbar="true" 
		        android:background="#00000000"               
                >                    
               </ListView>
           </LinearLayout> 
           <TextView 
               android:id="@+id/bigletter_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@android:color/white"
               android:padding="10dip"
               android:textColor="#38be99"
               android:textSize="50dip"
               android:layout_centerInParent="true"
               android:visibility="gone"
               />           
       </RelativeLayout>
</LinearLayout>
